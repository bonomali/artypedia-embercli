/* Sticky footer styles
-------------------------------------------------- */
html
  position relative
  min-height 100%

body
  /* Margin bottom by footer height */
  margin-bottom 80px
  margin-top 80px
  height 100%

body > .container
  padding 60px 15px 0

.container .text-muted
  margin 20px 0


// ORGANISE THE BLOCKS
// --------------------------------------------------

.fixed-top-left
  position fixed
  top 0
  left 0
  width 240px
  height 80px
  z-index 1130
  background-color #f6f6f6
  background-image linear-gradient(#fff 42%, #f6f6f6 100%)


.fixed-top-right
  position fixed
  top 0
  left 0
  width 100%
  height 80px
  z-index 900
  background-color #f6f6f6
  background-image linear-gradient(#fff 42%, #f6f6f6 100%)
  border-bottom 1px solid #a7d7f9
  
.fixed-column-top-left
  position fixed
  top 80px
  left 0
  width 240px
  height 100px
  z-index 1001
  background-color #f6f6f6

.fixed-column-left
  position fixed
  top 80px
  left 0
  bottom 80px
  width 241px
  height 100%
  z-index 1000
  display block
  //padding 20px
  overflow-x hidden
  overflow-y auto
  background-color #f6f6f6
  border-right 1px solid #a7d7f9
  padding 0

.fixed-bottom-left
  position fixed
  left 0
  bottom 0
  width 240px
  height 80px
  z-index 1200
  background-color #f6f6f6
    
.absolute-bottom-right
  position absolute
  left 0
  bottom 0
  width 100%
  height 80px
  z-index 1000
  background-color #f6f6f6
  border-top 1px solid #a7d7f9

.main-content
  padding 25px
  padding-left 265px
  background-color #fff
  height 100%


