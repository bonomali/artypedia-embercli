/* Sticky footer styles
-------------------------------------------------- */
html
  position relative
  min-height 100%

body
  /* Margin bottom by footer height */
  margin-bottom 80px
  margin-top 80px

#footer
  position absolute
  bottom 0
  width 100%
  /* Set the fixed height of the footer here */
  height 80px
  background-color #f6f6f6

// /* Custom page CSS
// -------------------------------------------------- */

body > .container
  padding 60px 15px 0

.container .text-muted
  margin 20px 0


// --------------------------------------------------

.main-container
  background-color #f6f6f6

.main-content
  // margin-top 52px
  padding 8%
  border-left 1px solid #a7d7f9
  background-color #fff

.wrapper-col
  padding 0

// .wrapper-nav
//   padding-bottom -1px
//   border-bottom 1px solid #ddd

.navbar-default
  background-color #f6f6f6
  background-image linear-gradient(#fff 42%, #f6f6f6 100%)
  border 0

.footer-right
  text-align right
  padding 25px
  border-top 1px solid #a7d7f9

.footer-left
  text-align center
  padding 25px 25px 0 0

.nagivation-top
  border-bottom 1px solid #a7d7f9
  height 80px
  padding-left 0



.fixed-top
  position fixed
  top 0
  right 0
  left 0
  z-index 1030
  height 80px
  background-color #f6f6f6
  background-image linear-gradient(#fff 42%, #f6f6f6 100%)

.grand-title
  text-align center
  padding-top 30px
  padding-bottom 0

.grand-title > a
  font-size 38px
  font-family 'Gilda Display', serif
  color #5e5e5e
  text-align center

.grand-title > a:focus
  color #9f9f9f

.grand-title > a:hover, .grand-title > a:focus
  text-decoration none



// OTHERS CUSTOM STYLES

a.active
  color #555
  cursor default
  background-color #e7e7e7
  border 1px solid #ddd
  border-bottom-color transparent



.new-comment-text
  color #999

#comment-text-area
  height 34px

.product-description
  text-align justify

.read-more
  color Red

.is-expanded
  color Green

.edit-artist
  margin-top 20px
  text-align left
  font-size 1.3em

.btn-margin-left30
  margin-left 30px

.btn-margin-top10-bottom10
  margin-top 20px
  margin-bottom 20px


.navbar-top
  margin-top 38px
  border-bottom 1px solid #a7d7f9

.navbar-top > li
  float left
  margin-bottom -1px

.navbar-top > li > a:hover, .navbar-top > li > a:focus
  text-decoration none
  background-color #fff

a.navbar-link-top.active
  color #555
  cursor default
  background-color #fff
  border 1px solid #a7d7f9
  border-bottom-color transparent
  border-top-color transparent



.nav-sidebar > li > a
  margin-right 2px
  line-height 1.42857143
  border 1px solid transparent
  border-radius 4px 4px 0 0
  padding 5px 20px

.nav-sidebar > .active > a
  color #fff
  background-color #428bca
  border 0


.register-new
  margin 20px 0 25px
  font-style italic

