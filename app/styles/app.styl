// COLORS
// --------------------------------------------------

wikigrey = #f6f6f6
wikiblue = #a7d7f9

// --------------------------------------------------

html
  position relative
  min-height 100%

body
  margin-bottom 80px
  margin-top 80px
  height 100%

// ORGANISE THE BLOCKS
// --------------------------------------------------

.fixed-top-left
  position fixed
  top 0
  left 0
  width 240px
  height 80px
  z-index 1130
  background-color wikigrey
  background-image linear-gradient(#fff 42%, wikigrey 100%)


.fixed-top-right
  position fixed
  top 0
  left 0
  width 100%
  height 80px
  z-index 900
  background-color wikigrey
  background-image linear-gradient(#fff 42%, wikigrey 100%)
  border-bottom 1px solid wikiblue
  
.fixed-column-top-left
  position fixed
  top 80px
  left 0
  width 240px
  height 100px
  z-index 1001
  background-color wikigrey

.fixed-column-left
  position fixed
  top 80px
  left 0
  bottom 80px
  width 241px
  height 100%
  z-index 1000
  display block
  //padding 20px
  overflow-x hidden
  overflow-y auto
  background-color wikigrey
  border-right 1px solid wikiblue
  padding 0

.fixed-bottom-left
  position fixed
  left 0
  bottom 0
  width 240px
  height 81px
  z-index 1200
  background-color wikigrey
    
.absolute-bottom-right
  position absolute
  left 0
  bottom 0
  width 100%
  height 80px
  z-index 1000
  background-color wikigrey
  border-top 1px solid wikiblue

.main-content
  padding 25px
  padding-left 265px
  background-color #fff
  height 100%


// NAVBARS
// --------------------------------------------------

.list-group
  margin-bottom 0

.navbar-top
  margin-left 240px
  margin-top 38px
  border-bottom 1px solid wikiblue

.navbar-top > li
  float left
  margin-bottom -1px

.navbar-top > li > a:hover, .navbar-top > li > a:focus
  text-decoration none
  background-color #fff

a.navbar-link-top.active
  color #555
  cursor default
  background-color #fff
  border 1px solid wikiblue
  border-bottom-color transparent
  border-top-color transparent

.nav-sidebar > li > a
  margin-right 2px
  line-height 1.42857143
  border 1px solid transparent
  border-radius 4px 4px 0 0
  padding 5px 20px

.nav-sidebar > .active > a
  color #fff
  background-color #428bca
  border 0

.register-new
  margin 135px 0 20px
  font-style italic


